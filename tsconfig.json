{
    "compilerOptions": {
        "lib": [
            "es2015"
        ],
        "rootDir": "./src",
        "baseUrl": "./",
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "exclude": [
        "./node_modules",
        "./dist",
        "./test"
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "excludePrivate": true,
        "excludeProtected": true,
        "excludeNotExported": true,
        "excludeExternals": true,
        "toc": true
    }
}
